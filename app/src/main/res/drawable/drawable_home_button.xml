<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient android:startColor="#20799F" android:endColor="#2798C6" android:angle="270" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient android:startColor="#2798C6" android:endColor="#20799F" android:angle="270" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient android:startColor="#2798C6" android:endColor="#20799F" android:angle="270" />
        </shape>
    </item>
</selector>