<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2798C6">

        <ImageView
            android:contentDescription="@string/string_image_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnDetailGymBack"
            android:src="@drawable/ic_action_previous_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/string_gym_details"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:contentDescription="@string/string_image_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_serach_normal"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FAF9F5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:contentDescription="@string/string_image_description"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgDetailgymPicture"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gym1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailGymCity"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/drawable_gym_openhour"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailGymHour"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_gym_openhour"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        tools:ignore="RelativeOverlap,RtlHardcoded" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_search_rectangle"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/txtDetailGymName"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/string_visit"
                            android:id="@+id/btnDetailGymVisit"
                            android:background="@drawable/drawable_class_book"
                            android:textColor="@color/color_white"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <RatingBar
                            android:id="@+id/ratingDetailGym"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:isIndicator="true"
                            android:rating="3.5"
                            android:paddingTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/txtDetailGymReview"
                            android:textColor="@color/color_black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailGymDescription"
                        android:textColor="@color/color_black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/spGymOpenHours"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="200dp"
                        android:id="@+id/layoutGymMap">

                        <fragment
                            android:id="@+id/gymMap"
                            android:name="com.google.android.gms.maps.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutGymClasses"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/string_classes1"
                        android:id="@+id/textView13"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#ffffff"
                        tools:ignore="DisableBaselineAlignment">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/string_less"
                                android:id="@+id/txtScheduleBack"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay1"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate1"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:background="@drawable/drawable_circle_calendar"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay2"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate2"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay3"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate3"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay4"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate4"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay5"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate5"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay6"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate6"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleDay7"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/txtScheduleDate7"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.6"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/string_greater"
                                android:id="@+id/txtScheduleNext"
                                android:gravity="center"
                                android:textColor="@color/color_black"
                                android:padding="5dp"
                                android:textSize="20sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ffffff">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:id="@+id/layoutScheduleUpcoming"
                            android:gravity="center"
                            android:layout_centerInParent="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/string_no_classes"
                                android:textColor="@color/color_black"
                                android:textSize="30sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/txtScheduleUpcoming"
                                android:textColor="@color/color_black"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:id="@+id/layoutDetailGymSchedule"
                            android:layout_height="match_parent"></LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>