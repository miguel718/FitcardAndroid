<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2798C6">

        <ImageView
            android:contentDescription="@string/string_image_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnDetailClassBack"
            android:src="@drawable/ic_action_previous_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/string_class_detail"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:contentDescription="@string/string_image_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_serach_normal"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FAF9F5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:contentDescription="@string/string_image_description"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgDetailClassPicture"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gym1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailClassAddress"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/drawable_gym_openhour"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailClassHour"
                        android:textColor="@color/color_white"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_gym_openhour"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        tools:ignore="RelativeOverlap,RtlHardcoded" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_search_rectangle"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:text=""
                            android:id="@+id/txtDetailClassName"
                            android:textColor="@color/color_black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="@string/string_book"
                            android:id="@+id/btnDetailClassBook"
                            android:background="@drawable/drawable_class_book"
                            android:textColor="@color/color_white"
                            android:layout_marginRight="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <RatingBar
                            android:id="@+id/ratingDetailClass"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:isIndicator="true"
                            android:rating="3.5"
                            android:paddingTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/txtDetailClassReview"
                            android:textColor="@color/color_black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/string_gym_name"
                                android:id="@+id/textView14"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:id="@+id/txtClassGymName"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_black"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/string_category"
                                android:id="@+id/textView17"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:id="@+id/txtClassCategory"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_black"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/string_address"
                                android:id="@+id/textView22"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:id="@+id/txtClassAddress"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_black"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/string_date"
                                android:textColor="@color/color_black"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:id="@+id/txtDetailClassDate"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_black"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txtDetailClassDescription"
                        android:textColor="@color/color_black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_search_rectangle"
                    android:layout_margin="5dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_review"
                        android:id="@+id/txtDetailClassReviewLabel"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        tools:ignore="RtlHardcoded" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutDetailClassReview" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>