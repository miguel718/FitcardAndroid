<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center_vertical"
        android:background="@drawable/drawable_search_rectangle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent">

            <ImageView
                android:contentDescription="@string/string_image_description"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/imgGymBookImage"
                android:src="@drawable/gym1"
                android:scaleType="centerCrop"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtGymBookHour"
                android:textSize="16sp"
                android:textColor="@color/color_white"
                android:background="@drawable/drawable_gym_openhour"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtGymBookName"
                android:textSize="18dp"
                android:textColor="#2798C6"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                tools:ignore="RtlHardcoded" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txtGymBookTime"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_black"
                    android:textSize="16dp"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/string_cancel"
                    android:id="@+id/btnGymBookCancel"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/drawable_home_button"
                    android:textColor="@color/color_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    tools:ignore="ButtonOrder,RtlHardcoded" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>