<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EAEAEA"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/string_less"
                android:id="@+id/txtClassDateBack"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay1"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate1"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:background="@drawable/drawable_circle_calendar"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay2"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate2"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay3"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate3"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay4"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate4"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay5"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate5"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay6"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate6"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtClassDay7"
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:id="@+id/txtClassDate7"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/string_greater"
                android:id="@+id/txtClassDateNext"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:padding="5dp"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EAEAEA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/layoutNextUpcomingClass"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_no_classes"
                android:id="@+id/txtNextUpcomingDate1"
                android:textColor="@color/color_black"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtNextUpcomingDate"
                android:textColor="@color/color_black"
                android:textSize="20dp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lstClasses"
            android:layout_weight="1"
            android:divider="@null"
            tools:ignore="ObsoleteLayoutParam"
            android:dividerHeight="0dp" />

    </RelativeLayout>

</LinearLayout>